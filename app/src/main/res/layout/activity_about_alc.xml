<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutAlcActivity">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:background="@color/colorPrimary"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/toolbar">

        <Button
                android:id="@+id/about_alc_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:drawable/ic_menu_revert"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:foregroundGravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About ALC"
                android:contentDescription=""
                app:fontFamily="@font/cabin"
                android:layout_marginLeft="30dp"
                tools:layout_editor_absoluteY="19dp"
                tools:layout_editor_absoluteX="120dp" android:textSize="24sp"/>
    </android.support.v7.widget.Toolbar>
    <WebView
            android:id="@+id/about_alc_web"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteX="-2dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>


</android.support.constraint.ConstraintLayout>